{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "3.0.4",
  "icons": {
    "16": "UI/icon16.png",
    "64": "UI/icon64.png"
  },
  "browser_action": {
		"default_icon": "UI/icon16.png",
		"default_popup": "popup.html"
	},
  "permissions": ["storage", "webRequest", "*://*.omegle.com/*"],
  "background": {
    "scripts": ["listener.min.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.omegle.com/*"],
      "css": ["styles.css"],
      "js": ["libs/jquery-3.3.1.min.js", "extension.min.js"]
    }
  ],
  "web_accessible_resources": ["styles.css"],
  "applications": {
    "gecko": {
      "id": "omegleAntiSpam@undefined.cba.pl"
    }
  }
}
